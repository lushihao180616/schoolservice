<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lushihao.service.dao.UserMapper">
    <select id="selectOne" resultType="com.lushihao.service.bean.User">
        select * from  `user` where `stuNum`=#{stuNum}
    </select>
    <select id="selectAllManage" resultType="com.lushihao.service.bean.User">
        select * from  `user` where `manageFlag`!='2'
    </select>
    <insert id="insertOne">
        insert into `user` (`stuNum`,`name`,`pwd`,`grade`,`className`,`major`,`sex`,`manageFlag`) values(#{stuNum},#{name},#{pwd},#{grade},#{className},#{major},#{sex},'0');
    </insert>
    <update id="updateOne">
        update
            `user`
        set
            `name`=#{name},`grade`=#{grade},`className`=#{className},`major`=#{major},`sex`=#{sex}
        where
            `stuNum` = #{stuNum};
    </update>
    <update id="updatePwd">
        update
            `user`
        set
            `pwd`=#{pwd}
        where
            `stuNum` = #{stuNum};
    </update>
    <update id="manageUser">
        update
            `user`
        set
            `manageFlag`=#{manageFlag}
        where
            `stuNum` = #{stuNum};
    </update>
    <select id="selectAll" resultType="com.lushihao.service.bean.User">
        select * from `user`
    </select>
</mapper>