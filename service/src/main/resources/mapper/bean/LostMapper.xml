<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lushihao.service.dao.LostMapper">
    <insert id="insertOne">
        insert into
            `lost`
            (`stuNum`,`getTime`,`place`,`content`,`createTime`)
        values
            (#{stuNum},#{getTime},#{place},#{content},#{createTime})
    </insert>
    <delete id="deleteOne">
        delete from
            `lost`
        where
            `id`=#{id}
    </delete>
    <select id="selectLimit" resultType="com.lushihao.service.bean.Lost">
        select * from
            `lost`
        order by
            `createTime` desc
        limit
            0,10
    </select>
    <select id="selectMyLimit" resultType="com.lushihao.service.bean.Lost">
        select * from
            `lost`
        where
            `stuNum`=#{stuNum}
        order by
            `createTime` desc
        limit
            0,10
    </select>
</mapper>